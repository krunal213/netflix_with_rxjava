<resources>

    <style name="Theme.NetflixWithRxJava" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/netflix_sans_regular</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="bottomNavigationStyle">@style/Theme.NetflixWithRxJava.BottomNavigationView.Colored</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="searchViewStyle">@style/Theme.NetflixWithRxJava.SearchView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.FilledBox</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.OutlinedButton</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.NetflixWithRxJava.BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.NetflixWithRxJava.BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.NetflixWithRxJava.BottomNavigationView.Colored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceInactive">@style/Theme.NetflixWithRxJava.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/Theme.NetflixWithRxJava.BottomNavigationView.Active</item>
    </style>

    <style name="Theme.NetflixWithRxJava.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/color_search_view</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BottomSheetDialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">#C60A0A</item>
        <item name="colorOnPrimary">#ffffff</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">58dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.App.TextInputLayout.FilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">#958D8D</item>
    </style>

    <style name="Widget.App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textAllCaps">false</item>-->
        <item name="android:minHeight">58dp</item>
        <item name="strokeColor">#FEFBFB</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>


        <!--<item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>-->
    </style>

    <style name="Theme.NetflixWithRxJava.White" parent="Theme.NetflixWithRxJava">
        <item name="android:colorControlNormal">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Theme.NetflixWithRxJava.BottomSheet.Full" parent="Theme.NetflixWithRxJava">
    </style>

    <style name="BoldMenuText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">#181818</item>
    </style>

</resources>